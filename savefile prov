        	<script>
        	function number(i){
        	var a = document.getElementById("input1").value;
            var b = document.getElementById("input2").value;
            if(i==1){
            alert(parseInt(a + b));
            }
            if(i==2){
            alert(a-b);
            }
            if(i==3){
            alert(a*b);
            }
            if(i==4){
            alert(a/b);
            }
            }
        </script>
        <title>56</title>
